FROM node:13.8-alpine

RUN apk add --no-cache curl

RUN mkdir -p /home/node/app/node_modules && chown -R node:node /home/node/app

WORKDIR /home/node/app

COPY ./package*.json ./

USER node

RUN npm ci --production

COPY --chown=node:node . .

EXPOSE 3000

CMD ["npm", "run", "start"]